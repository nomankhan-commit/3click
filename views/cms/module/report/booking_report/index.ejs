<main class="main-wrapper clearfix">
    <!-- Page Title Area -->
    <div class="row page-title clearfix">
        <div class="page-title-left">
            <h6 class="page-title-heading mr-0 mr-r-5">Booking Report</h6>
            <p class="page-title-description mr-0 d-none d-md-inline-block"></p>
        </div>
        <!-- /.page-title-left -->
        <div class="page-title-right d-none d-sm-inline-flex">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/cms/">Dashboard</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="javascript:;">Report</a>
                </li>
                <li class="breadcrumb-item active">Booking Report</li>
            </ol>
        </div>
        <!-- /.page-title-right -->

    </div>

    <!-- /.page-title -->
    <!-- =================================== -->
    <!-- Different data widgets ============ -->
    <!-- =================================== -->
    <div class="widget-list">


        <div class="row">
            <div class="col-md-12 widget-holder">
                <div class="">
                    <div class="widget-heading clearfix">
                        <h5></h5>
                        <!-- <button class="btn btn-outline-primary ripple "data-toggle="modal" data-target=".add_new_popup"> -->
                        <!-- <span>Create</span> -->
                        <!-- <i class="material-icons list-icon ml-2 font-30">add_box</i>   -->
                        <!-- </button> -->

                    </div>
                    <!-- /.widget-heading -->
                    <div class="widget-body clearfix">
                        <form id="form_booking_report" method="post"
                            onsubmit="$(this).attr('action','/cms/report/booking-report/'+$('#form_booking_report_type').val())"
                            target="_blank">
                            <div class="row ">

                                <div class="col-md-6 ">

                                    <div class="form-group">
                                        <label class="form-control-label">From</label>
                                        <div class="input-group">
                                            <input type="text" id="form_booking_report_from_date"
                                                name="form_booking_report_from_date" class="form-control datepicker"
                                                value="<%= moment().subtract(1, 'month').format('MM/DD/YYYY'); %>"
                                                data-plugin-options='{"autoclose": true}'>
                                            <span class="input-group-addon"><i
                                                    class="list-icon material-icons">date_range</i></span>
                                        </div>
                                        <!-- /.input-group -->
                                    </div>


                                </div>

                                <div class="col-md-6 ">

                                    <div class="form-group">
                                        <label class="form-control-label">To</label>
                                        <div class="input-group">
                                            <input type="text" id="form_booking_report_to_date"
                                                name="form_booking_report_to_date" class="form-control datepicker"
                                                value="<%= moment().format('MM/DD/YYYY'); %>"
                                                data-plugin-options='{"autoclose": true}'>
                                            <span class="input-group-addon"><i
                                                    class="list-icon material-icons">date_range</i></span>
                                        </div>
                                        <!-- /.input-group -->
                                    </div>


                                </div>


                                
                                <div class="col-md-6 ">
                                    <div class="form-group">
                                        <label class="form-control-label">Status</label>
                                        <select class="m-b-10 form-control" id="form_booking_report_status"
                                            name="form_booking_report_status" required data-placeholder="Choose">

                                            <option selected value="html">Complete</option>

                                        </select>

                                    </div>

                                </div>

                                <div class="col-md-6 ">
                                        <div class="form-group">
                                            <label class="form-control-label">View type</label>
                                            <select class="m-b-10 form-control" id="form_booking_report_type"
                                                name="form_booking_report_type" required data-placeholder="Choose">
    
                                                <option selected value="html">HTML</option>
                                                <option value="pdf">PDF</option>
                                                <option value="excel">EXCEL</option>
    
                                            </select>
    
                                        </div>
    
                                    </div>
    




                            </div>

                            <div class="form-actions">
                                <div class="form-group row">
                                    <div class="col-md-12 text-right btn-list">
                                        <button class="btn btn-primary btn-rounded" type="submit">View</button>

                                    </div>
                                </div>
                            </div>
                        </form>

                        <table class="table table-striped table-responsive" id='booking_report_dt'>
                            <thead>
                                <tr>



                                </tr>
                            </thead>
                            <tbody>



                            </tbody>
                            <tfoot>

                            </tfoot>

                        </table>

                    </div>
                    <!-- /.widget-body -->
                </div>
                <!-- /.widget-bg -->
            </div>
            <!-- /.widget-holder -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.widget-list -->
    <!-- /.modal -->


</main>
